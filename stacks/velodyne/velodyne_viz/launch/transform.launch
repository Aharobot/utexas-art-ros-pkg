<!-- -*- mode: XML -*- -->
<!-- transform live Velodyne data into a point cloud in "/odom" frame -->

<launch>

  <!-- define transforms for static vehicle -->
  <include file="$(find velodyne_common)/launch/static_vehicle_tf.launch" />

  <!-- start nodelet manager, driver and transform nodelets -->
  <include file="$(find velodyne_common)/launch/nodelet_manager.launch" />
  <include file="$(find velodyne_common)/launch/transform.launch" />

  <node pkg="rviz" type="rviz" name="rviz" />

</launch>
