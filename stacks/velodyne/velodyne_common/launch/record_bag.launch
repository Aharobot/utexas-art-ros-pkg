<!-- -*- mode: nXML -*- -->
<!-- record an ROS bag from the raw device, with corresponding
     odometry, GPS and coordinate transforms
-->

<launch>
  <node pkg="art_common" type="vehicle_static_tf" name="vehicle_static_tf"/>
  <node pkg="applanix" type="odometry" name="odometry"/>
  <node pkg="velodyne_common" type="read" name="read"/>
  <node pkg="rosbag" type="rosbag" name="rosbag"
        args="record -o $(env PWD)/velodyne /velodyne/rawscan /odom /gps /tf" />
</launch>
